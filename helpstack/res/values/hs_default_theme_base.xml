<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Default/Base Themes -->
    <!-- The base characteristics are defined in the default themes -->
   
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>
    
    <!-- Background default theme -->
    <style name="hs_background_defaultTheme">
        <item name="android:background">@color/hs_background_color</item>
    </style>
    
    <!-- Main ListView default theme -->
    <style name="hs_listView_defaultTheme">
        <item name="android:cacheColorHint">@color/hs_transparent_color</item>
        <item name="android:divider">@color/hs_listView_divider_color</item>
        <item name="android:dividerHeight">@dimen/hs_listView_divider_height</item>
        <item name="android:listSelector">@color/hs_listView_selector_color</item>
    </style>
    
    <!-- Main ListView header background default Theme -->
    <style name="hs_listView_headerBackground_defaultTheme">
        <item name="android:background">@color/hs_header_background_color</item>
    </style>
    
    <!-- Main ListView child view background default Theme -->
    <style name="hs_listView_childBackground_defaultTheme">
        <item name="android:background">@color/hs_childView_background_color</item>
    </style>
    
    <!-- Main ListView header text default theme -->
    <style name="hs_listView_headerText_defaultTheme">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/hs_listView_header_TextSize</item>
    </style>
    
    <!-- Main ListView child text default theme -->
    <style name="hs_listView_childText_defaultTheme">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/hs_listView_ChildView_TextSize</item>
    </style>
    
    <!-- Chat screen - right chat bubble default theme -->
    <style name="hs_rightChatBubble_defaultTheme">
        <item name="android:background">@drawable/right_chat_bubble</item> 
    </style>
    
    <!-- Chat screen - left chat bubble default theme -->
    <style name="hs_leftChatBubble_defaultTheme">
        <item name="android:background">@drawable/left_chat_bubble</item> 
    </style>
    
    <!-- Chat screen - message text default theme -->
    <style name="hs_messageText_defaultTheme">
        <item name="android:paddingTop">3dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/hs_message_TextSize</item>
        <item name="android:gravity">left</item>
        <item name="android:minWidth">100dp</item>
    </style>
    
    <!-- Chat screen - left chat message text default theme -->
    <style name="hs_leftmessageText_defaultTheme" parent="@style/hs_messageText_defaultTheme">
        <item name="android:textColor">@color/hs_leftchat_messageTextcolor</item>
    </style>
    
    <!-- Chat screen - right chat message text default theme -->
    <style name="hs_rightmessageText_defaultTheme" parent="@style/hs_messageText_defaultTheme">
        <item name="android:textColor">@color/hs_rightchat_messageTextcolor</item>
    </style>

    <!-- Chat screen - more info text(Sender name and message time) default theme -->
    <style name="hs_smallText_defaultTheme">
        <item name="android:textColor">@color/hs_message_moreinfoTextColor</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/hs_small_TextSize</item>
        <item name="android:maxWidth">@dimen/hs_smallTextMaxWidth</item>
    </style>
    
    <!-- Button default theme -Report issue button -->
    <style name="hs_button_defaultTheme">
        <item name="android:background">@color/hs_transparent_color</item>
        <item name="android:textColor">@color/hs_buttonTextcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/hs_button_textSize</item>
    </style>
    
    <!-- Edit text default theme -->
    <style name="hs_editText_defaultTheme">
        <item name="android:background">@color/hs_transparent_color</item>
        <item name="android:textColor">@color/hs_editTextcolor</item>
        <item name="android:textSize">@dimen/hs_default_text_size</item>
    </style>

</resources>
